<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22"
            fx:controller="it.polimi.ingsw.gc01.view.gui.GUIControllers.JoinByIdController">
    <children>
        <Label layoutX="27.0" layoutY="75.0" text="Type in the Room ID you want to join">
            <font>
                <Font size="36.0"/>
            </font>
        </Label>
        <TextField fx:id="roomID" layoutX="221.0" layoutY="207.0"/>
        <Button fx:id="nextButton" layoutX="279.0" layoutY="302.0" mnemonicParsing="false"
                onAction="#handleNextButtonAction" text="Next"/>
        <Button fx:id="goBack" layoutX="18.0" layoutY="23.0" mnemonicParsing="false" onAction="#handleGoBackButton"
                text="GoBack"/>
    </children>
</AnchorPane>
